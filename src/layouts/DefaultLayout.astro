---
const { title } = Astro.props;
import ChatPanel from "../components/ChatPanel.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `Nestey | ${title}` : "Nestey"}</title>
    <link rel="stylesheet" href="/src/styles/site.css" />
  </head>
  <body>
    <div class="app-shell">
      <aside class="nav">
        <div class="brand">Nestey</div>
        <nav>
          <ul>
            <li><a href="/" class="nav-item">Home</a></li>
            <li><a href="/personal" class="nav-item">Personal</a></li>
            <li><a href="/benefits" class="nav-item">Benefits</a></li>
            <li><a href="/timeoff" class="nav-item">Time Off</a></li>
            <li><a href="/goals" class="nav-item">Goals</a></li>
          </ul>
        </nav>
      </aside>

      <main class="workspace">
        <slot />
      </main>

      <aside class="ai-pane">
        <ChatPanel />
      </aside>
    </div>

    <script type="module" src="/js/site.js"></script>
  </body>
</html>
