---
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout title="Benefits">
  <section class="workspace-header">
    <h1>Benefits</h1>
  </section>

  <section class="workspace-content">
    <!-- COST SUMMARY KPIs -->
    <div class="card" style="grid-column: span 12;">
      <h3>Cost Summary</h3>
      <div style="display:flex;gap:1rem;flex-wrap:wrap;margin-top:.5rem;">
        <div class="kpi" style="flex:1;min-width:180px;">
          <span>I Pay</span><span class="value" id="kpi-employee-pays"
            >$0.00</span
          >
        </div>
        <div class="kpi" style="flex:1;min-width:180px;">
          <span>Employer Pays</span><span class="value" id="kpi-employer-pays"
            >$0.00</span
          >
        </div>
        <div class="kpi" style="flex:1;min-width:180px;">
          <span>Total Cost</span><span class="value" id="kpi-total-cost"
            >$0.00</span
          >
        </div>
      </div>
    </div>

    <!-- MEDICAL BENEFITS -->
    <div class="card" style="grid-column: span 12;">
      <h3>Medical</h3>
      <div id="medicalBenefits" class="benefits-list">
        <div class="benefit-placeholder">Loading medical benefits...</div>
      </div>
    </div>

    <!-- DENTAL BENEFITS -->
    <div class="card" style="grid-column: span 6;">
      <h3>Dental</h3>
      <div id="dentalBenefits" class="benefits-list">
        <div class="benefit-placeholder">Loading dental benefits...</div>
      </div>
    </div>

    <!-- VISION BENEFITS -->
    <div class="card" style="grid-column: span 6;">
      <h3>Vision</h3>
      <div id="visionBenefits" class="benefits-list">
        <div class="benefit-placeholder">Loading vision benefits...</div>
      </div>
    </div>

    <!-- OTHER BENEFITS -->
    <div class="card" style="grid-column: span 12;">
      <h3>Other Benefits</h3>
      <div id="otherBenefits" class="benefits-list">
        <div class="benefit-placeholder">Loading other benefits...</div>
      </div>
    </div>
  </section>

  <script type="module" src="/src/scripts/benefits.js"></script>
</DefaultLayout>

<style>
  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .benefit-item {
    padding: 1.5rem;
    border: 1px solid var(--gray-200);
    border-radius: 10px;
    background: var(--gray-50);
  }

  .benefit-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.25rem;
  }

  .benefit-name {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--gray-900);
    margin-bottom: 0.5rem;
  }

  .benefit-plan {
    font-size: 0.85rem;
    color: var(--gray-600);
    margin-top: 0.5rem;
  }

  .benefit-description {
    color: var(--gray-700);
    font-size: 0.9rem;
    margin-bottom: 1.25rem;
    line-height: 1.7;
  }

  .benefit-costs {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    padding-top: 1rem;
    margin-top: 0.5rem;
    border-top: 1px solid var(--gray-200);
  }

  .cost-item {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .cost-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--gray-600);
    font-weight: 500;
  }

  .cost-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--gray-900);
  }

  .cost-item.employee .cost-value {
    color: var(--red-alert);
  }

  .cost-item.employer .cost-value {
    color: var(--green-success);
  }

  .dependants-badge {
    display: inline-block;
    padding: 0.25rem 0.6rem;
    background: var(--blue-accent);
    color: white;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .benefit-placeholder {
    color: var(--gray-500);
    font-style: italic;
    padding: 1rem;
    text-align: center;
  }
</style>
